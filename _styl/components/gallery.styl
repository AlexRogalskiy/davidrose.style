/*--------------------------------------------------------------------
* $GALLERY
--------------------------------------------------------------------*/

.gallery
  width: 100vw
  padding: 10px
  position: fixed
  right: 0
  overflow: scroll
  -webkit-overflow-scrolling: touch
  background: white
  text-align: center
  z-index: 2
  height: 'calc(100vh - %s)' % $img-h
  top: $img-h

  @supports ( (--a: 0))
    height: calc(100vh - var(--img-h))
    top: var(--img-h)

  @supports (display: grid)
    display: grid

    @media screen and (min-width: $wide + 1)
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr))
    @media screen and (min-width: $mobile + 1) and (max-width: $wide)
      grid-template-columns: repeat(auto-fit, minmax(160px, 1fr))
    @media screen and (max-width: $mobile)
      grid-template-columns: repeat(auto-fit, minmax(130px, 1fr))
    @media screen and (max-width: $mobile) and (max-height: $med)
       grid-template-columns: repeat(auto-fit, minmax(90px, 1fr))

  // right side
  @media screen and (min-width: $mobile + 1) and (max-height: $tall)
    height: 100vh
    top: 0
    width: 'calc(100vw - %s)' % $feature-w
    @supports ( (--a: 0))
      width: calc(100vw - var(--feature-w))

  .gallery-shirt
    padding: 10px
    float: left
    @supports (display: grid)
      max-width: auto
      float: none

  img
    width: 100%

  figcaption
    font-weight: $font-weight-bold

    @media screen and (min-height: $med + 1)
      font-size: 65%
      @media screen and (max-width: $mobile)
        margin-top: -15px
      @media screen and (min-width: $mobile + 1)
        margin-top: -20px

    @media screen and (max-height: $med)
      margin-top: -10px
      font-size: 55%

  a
    text-decoration: none
    color: $black

    &:focus
      background-color: $grey-lightest

  @media(hover: hover) and (pointer: fine)
    a:hover
      background-color: $grey-lightest

  button:focus
    outline: 2px solid $black

  #gallery-filters
    display: none

body.js-ready

  .gallery
    padding-top: 40px

  .gallery-shirt
    display: none
    
    &.show
      display: block

  #gallery-filters
    display: flex
    position: fixed
    top: 0
    right: 0
    background-color: white
    border-bottom: 2px solid $black
    font-size: 80%
    width: $feature-w
    margin-top: $img-h

    @supports ( (--a: 0))
      width: var(--feature-w)
      margin-top: var(--img-h)

    @media screen and (min-width: $mobile + 1) and (max-height: $tall)
      width: 'calc(100vw - %s)' % $feature-w
      margin-top: auto
      @supports ( (--a: 0))
        width: calc(100vw - var(--feature-w))

  .filter
    margin: 5px
    padding: 4px 8px
    flex: 1
    background-color: $grey-lightest
    border: none
    font-size: 90%
    text-align: left
    cursor: pointer

    &:not(:last-child)
      margin-right: 0

    &:not(.active):hover
      background-color: $black
      color: white

    &.active
      padding-left: 25px
      background-color: $gold
      background: $gold url('/assets/images/icon-check.svg') no-repeat 8px center
      background-size: 12px auto
