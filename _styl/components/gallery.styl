/*--------------------------------------------------------------------
* $GALLERY
--------------------------------------------------------------------*/

.gallery
  width: calc(100vw - 500px)
  height: 100vh
  padding: 10px
  overflow: scroll
  position: fixed
  right: 0
  top: 0
  z-index: 2
  display: grid
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr))
  background: white
  text-align: center

  @media screen and (min-width: 901px) and (max-width: 950px)
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr))

  @media screen and (max-width: $mobile)
    width: 100vw
    height: 150px
    overflow-x: scroll
    overflow-y: hidden
    display: flex

    .gallery-shirt
      display: inline-block
      width: 100px
      height: 100px
      flex-shrink: 0

  .gallery-shirt
    padding: 10px

  img
    width: 100%

  figcaption
    font-weight: $font-weight-bold

    @media screen and (min-width: $mobile + 1)
      margin: -20px 0 30px
      font-size: 70%
    @media screen and (max-width: $mobile)
      margin: -15px 0 0
      font-size: 60%

  a
    text-decoration: none
    color: $black
    
    &:hover,
    &:focus
      background-color: $grey-lightest

  button
    &:focus
      outline: 2px solid $black

  #gallery-filters
    display: none

body.js-ready

  .gallery
    @media screen and (min-width: $mobile + 1)
      padding-top: 50px
    @media screen and (max-width: $mobile)
      padding-top: 35px

  .gallery-shirt
    display: none
    
    &.show
      display: block

  #gallery-filters
    margin-bottom: 10px
    position: fixed
    top: 0
    right: 0
    background-color: white
    border-bottom: 2px solid $black
    font-size: 80%
    text-align: right

    @media screen and (min-width: $mobile + 1)
      width: calc(100vw - 500px)
      display: block

      .filter
        padding: 5px 10px
        &.active
          padding-left: 25px

    @media screen and (max-width: $mobile)
      width: 100vw
      display: flex
      
      .filter
        padding: 5px
        flex: 1
        font-size: 80%
        &.active
          padding-left: 20px

  .filter
    margin: 5px
    position: relative
    background: white
    border: none
    cursor: pointer
    font-size: 100%
    background-color: $grey-lightest
    text-align: left

    &:not(:last-child)
      margin-right: 0

    &:not(.active):hover
      background-color: $black
      color: white

    &.active
      background-color: $gold
      
