/*--------------------------------------------------------------------
* $FEATURE
--------------------------------------------------------------------*/

.feature
  width: var(--feature-w)
  min-height: var(--img-h)
  height: var(--img-h)
  position: absolute
  left: 0
  top: 0
  overflow: hidden
  z-index: 1
  background-color: $gold

  h1, h2, #share
    position: fixed
    z-index: 10

  h1
    top: 10px
    left: 10px

  h2
    left: 10px

    @media screen and (min-width: $mobile + 1)
      top: 40px
    @media screen and (max-width: $mobile)
      top: 30px

  #share
    padding-right: 20px
    display: inline-block
    top: 13px
    right: 10px
    background-image: url('/assets/images/icon-twitter.svg')
    background-repeat: no-repeat
    background-position: right center
    background-size: 16px auto
    border-bottom: none
    font-size: 80%

    @media screen and (min-width: $mobile + 1) and (max-height: $tall)
      right: calc((100vw - var(--feature-w)) + 10px)
      font-size: 85%

  .david-rose
    width: var(--img-w)
    height: var(--img-h)
    position: fixed
    z-index: 0

  .david-rose,
  .shirt img
    top: 0
    left: 50%
    transform: translateX(-47%)

    @media screen and (min-width: $mobile + 1) and (max-height: $tall)
      left: -15px
      transform: none

  .shirt
    width: var(--feature-w)
    height: var(--img-h)
    position: relative
    z-index: 1
    
    img
      width: var(--img-w)
      height: var(--img-h)
      position: absolute
      z-index: 2

  .prev,
  .next
    width: 25px
    height: @width*2
    position: absolute
    bottom: 35%
    z-index: 3
    text-indent: -9999em
    background: no-repeat center center
    background-size: 80% auto

    @media screen and (max-width: $mobile) and (max-height: $short)
      width: 15px
      height: @width*2

    &:focus
      background-color: black(.2)
      outline: none

  .prev
    left: 2%
    background-image: url('/assets/images/arrow-left.svg')
  .next
    right: 2%
    background-image: url('/assets/images/arrow-right.svg')

  figcaption
    font-weight: $font-weight-bold
    position: absolute
    bottom: 10px
    right: 30px

    @media screen and (min-width: $mobile + 1)
      font-size: 80%
    @media screen and (max-width: $mobile)
      font-size: 70%
