/*--------------------------------------------------------------------
* $TYPE
--------------------------------------------------------------------*/

h1, h2, h3, p, ul
  margin-bottom: 1.5em

h1, h2, h3
  line-height: 1.3
  font-weight: $font-weight-semibold
  color: black

  a
    font-weight: inherit
    color: inherit

h1
  font-size: 1.32em

h2
  font-size: 1.24em

h3
  font-size: 1.1em

em
  font-style: italic

strong
  font-weight: $font-weight-semibold

small
  font-size: 80%
